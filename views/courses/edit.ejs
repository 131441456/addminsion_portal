<%- include('../header.ejs') %>
<div class="primary-content">
<div class="container" style="padding:60px 0px">
    
    <h1>Edit Page</h1>
    <form action="/course_update/<%= d._id %>" method="post">
        <div class="mb-3">
          <label>Name:</label>
          <input type="text" name="name" class="form-control" value="<%= d.name %>">
        </div>
        <div class="mb-3">
          <label>Email:</label>
          <input type="email" name="email" class="form-control" value="<%= d.email %>">
        </div>
        <div class="mb-3">
          <label>Mobile Number:</label>
          <input type="text" name="mobile_number" class="form-control" value="<%= d.mobile_number %>">
        </div>
        <div class="mb-3">
          <label>Address:</label>
         <textarea row="5" cols="30" class="form-control" name="address" ><%= d.address %></textarea>
        </div>
        <div class="mb-3">
          <label>Gender:</label>
            <input class="form-check-input" type="radio" name="gender" id="exampleRadios1" value="male" <%= d.gender =='male'?'checked':'' %>>
            <label class="form-check-label" for="exampleRadios1">Male</label>
            <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="female" <%= d.gender =='female'?'checked':'' %> >
            <label class="form-check-label" for="exampleRadios2">Female</label>
        </div>
        
        <div class="mb-3">
          <label>Qualifications:</label>
           <select class="form-control" name="qualification">
            <option>Please select</option>
            <option <%= d.qualification =='10th'?'selected':'' %>>10th</option>
            <option <%= d.qualification =='12th'?'selected':'' %>>12th</option>
            <option <%= d.qualification =='Degree'?'selected':'' %>>Degree</option>
            <option <%= d.qualification =='Other'?'selected':'' %>>Other</option>
           </select>
        </div>
        
        <div class="mb-3">
          <label>Course</label>
          <input type="text" value="btech" name="course" class="form-control" readonly>
        </div>

        <div class="text-center"><input type="submit" value="Update" class="fullwidth button"></div>
        
    </form>

</div>
</div>
<%- include('../footer.ejs') %>